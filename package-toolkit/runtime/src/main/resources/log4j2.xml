<Configuration status="WARN" packages="io.opentelemetry.instrumentation.log4j.appender.v2_17">
    <Appenders>
        <Console name="ConsoleAppender" target="SYSTEM_OUT">
            <PatternLayout>
                <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{2} - %msg%n</pattern>
            </PatternLayout>
        </Console>
        <Routing name="Routing">
            <Routes pattern="$${sys:logDirectory}">
                <Route>
                    <File name="File" fileName="${sys:logDirectory:-logs}/debug.log" append="false">
                        <PatternLayout>
                            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
                        </PatternLayout>
                    </File>
                </Route>
            </Routes>
        </Routing>
        <OpenTelemetry name="OpenTelemetryAppender"/>
    </Appenders>
    <Loggers>
        <Root level="DEBUG">
            <AppenderRef ref="OpenTelemetryAppender"/>
            <AppenderRef ref="ConsoleAppender" level="INFO"/>
            <AppenderRef ref="Routing"/>
        </Root>
        <Logger name="com.atlan" level="DEBUG"/>
        <Logger name="software.amazon" level="INFO"/>
        <Logger name="org.apache" level="INFO"/>
    </Loggers>
</Configuration>
