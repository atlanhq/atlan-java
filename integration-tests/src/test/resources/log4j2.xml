<Configuration status="WARN">
    <Appenders>
        <Console name="ConsoleAppender" target="SYSTEM_OUT">
            <PatternLayout>
                <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{2} - %msg%n</pattern>
            </PatternLayout>
        </Console>
        <Routing name="Routing">
            <Routes pattern="$${ctx:className}">
                <Route>
                    <File name="appender-${ctx:className}" fileName="${ctx:className:-threads}.log" append="false">
                        <PatternLayout>
                            <pattern>%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} trace_id: %X{trace_id} span_id: %X{span_id} trace_flags: %X{trace_flags} - %msg%n</pattern>
                        </PatternLayout>
                    </File>
                </Route>
            </Routes>
        </Routing>
    </Appenders>
    <Loggers>
        <Root level="DEBUG">
            <AppenderRef ref="ConsoleAppender" level="INFO"/>
            <AppenderRef ref="Routing"/>
        </Root>
        <Logger name="com.atlan" level="DEBUG"/>
        <Logger name="software.amazon" level="INFO"/>
        <Logger name="org.apache" level="INFO"/>
    </Loggers>
</Configuration>
